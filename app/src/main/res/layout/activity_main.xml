                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_1f"
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_weight="0.5"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Introdução"
                                    android:textColor="#000000" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_2f"
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_weight="0.5"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="E.C.A." />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_3f"
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_weight="0.5"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Dicas de Saúde" />
                            </RelativeLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_4f"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Alimentação" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_5f"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Higiene Bucal" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_6f"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Imunização e Vacinas" />
                            </RelativeLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_7f"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Puberdade" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_8f"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Sexualidade" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_9f"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Projeto de Vida" />
                            </RelativeLayout>
                        </TableRow>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />
                    </TableLayout>

                </LinearLayout>

                <Space
                    android:id="@+id/space_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:id="@+id/layout_cadmasc"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#BEE6B6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_cad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="casual"
                        android:text="Caderneta Masculina"
                        android:textColor="#C57700"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Selecione um tópico" />

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_weight="0.5"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Introdução" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_weight="0.5"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="E.C.A." />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="100dp"
                                    android:layout_weight="0.5"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Dicas de Saúde" />
                            </RelativeLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Alimentação" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Higiene Bucal" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Imunização e Vacinas" />
                            </RelativeLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_7"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Puberdade" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_8"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Sexualidade" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.33">

                                <Button
                                    android:id="@+id/b_9"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:text="Projeto de Vida" />
                            </RelativeLayout>
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button_settings"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="#CCFFF095"
                    android:text="EDITAR PERFIL"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>